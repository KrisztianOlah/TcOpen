<UserControl
    x:Class="HmiTemplate.Wpf.Views.Operator.OperatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HmiTemplate.Wpf.Views.Operator"
    xmlns:mainplc="clr-namespace:MainPlc"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vortex="http://vortex.mts/xaml"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <UserControl.DataContext>
        <local:OperatorViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas>
            <mainplc:CUBaseSpotView DataContext="{Binding Cu, Mode=OneWay}"/>
        </Canvas>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
            <vortex:RenderableContentControl DataContext="{Binding MainPlc.MAIN._technology._automatAllTask}" PresentationType="Base" />
            <vortex:RenderableContentControl DataContext="{Binding MainPlc.MAIN._technology._groundAllTask}" PresentationType="Base" />
        </WrapPanel>
    </Grid>
</UserControl>