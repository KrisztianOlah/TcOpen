<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainPlc"
             xmlns:vortex="http://vortex.mts/xaml" 
             x:Class="MainPlc.TcoTaskedServiceComponentsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:UserControl.DataContext>
        <local:TcoTaskedServiceComponentsViewModel/>
    </d:UserControl.DataContext>
    <Grid Style="{DynamicResource Card}" Visibility="{Binding Component._taskState.Cyclic, Converter={local:TaskStateToVisibilityConverter}}">
        <vortex:RenderableContentControl DataContext="{Binding Serviceable}" PresentationType="Service-Manual"/>
    </Grid>
</UserControl>
